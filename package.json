{
  "author": "LIHENG <admin@lihengl.com>",
  "babel": {
    "stage": 0
  },
  "backend": {
    "production": "https://blog-api.lihengl.com",
    "staging": "https://test-blog-api.lihengl.com"
  },
  "bugs": {
    "url": "https://github.com/lihengl/blog-web/issues"
  },
  "cdnhost": {
    "lib": "https://cdnjs.cloudflare.com/ajax/libs",
    "app": "https://cdn.lihengl.com/blog"
  },
  "description": "Web client for Blog API",
  "devDependencies": {
    "babel-core": "5.8.25",
    "babel-eslint": "4.1.3",
    "babel-loader": "5.3.2",
    "chai": "3.2.0",
    "coveralls": "2.11.4",
    "cucumber": "0.5.3",
    "es5-shim": "4.1.13",
    "eslint-plugin-react": "3.4.2",
    "eslint": "1.5.0",
    "jshint": "2.8.0",
    "nodemon": "1.5.1",
    "precommit-hook": "3.0.0",
    "protractor": "2.2.0",
    "istanbul": "0.3.20",
    "json-loader": "0.5.3",
    "mocha": "2.3.2",
    "react-hot-loader": "1.3.0",
    "webpack": "1.12.2",
    "webpack-dev-server": "1.11.0"
  },
  "dependencies": {
    "babel": "5.8.23",
    "bluebird": "2.10.0",
    "cookie-parser": "1.4.0",
    "express": "4.13.3",
    "lodash": "3.10.1",
    "morgan": "1.6.1",
    "react": "0.13.3",
    "request": "2.62.0",
    "robots.txt": "1.1.0",
    "serve-favicon": "2.3.0",
    "superagent": "1.2.0"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "classes": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "jsx": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "rules": {
      "quotes": [2, "double"],
      "react/jsx-boolean-value": 2,
      "react/jsx-no-duplicate-props": 2,
      "react/jsx-no-undef": 2,
      "react/jsx-quotes": 2,
      "react/jsx-sort-prop-types": 2,
      "react/jsx-sort-props": 2,
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/no-did-mount-set-state": 2,
      "react/no-did-update-set-state": 2,
      "react/no-multi-comp": 2,
      "react/no-unknown-property": 2,
      "react/prop-types": 2,
      "react/react-in-jsx-scope": 2,
      "react/require-extension": [2, {"extensions": [".js"]}],
      "react/self-closing-comp": 2,
      "react/sort-comp": 2,
      "react/wrap-multilines": 2,
      "semi": [2, "always"]
    }
  },
  "homepage": "https://github.com/lihengl/blog-web",
  "jshintConfig": {
    "camelcase": true,
    "quotmark": "single",
    "latedef": true,
    "browser": true,
    "strict": true,
    "newcap": false,
    "unused": true,
    "eqeqeq": true,
    "mocha": true,
    "curly": true,
    "undef": true,
    "node": true
  },
  "license": "MIT",
  "main": "server.js",
  "name": "blog",
  "pre-commit": [
    "validate",
    "lint",
    "build",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lihengl/blog-web.git"
  },
  "scripts": {
    "build": "webpack",
    "clean": "rm -r static_assets coverage; npm prune",
    "demo": "protractor --seleniumAddress=$SELENIUM --cucumberOpts.format=pretty",
    "develop": "MODE=local nodemon --watch middlewares server.js",
    "functional": "protractor",
    "reload": "MODE=local webpack-dev-server --hot --inline --host localhost",
    "lint": "jshint .; eslint components",
    "selenium": "webdriver-manager start",
    "test": "istanbul cover _mocha -- --compilers js:babel/register --reporter dot",
    "validate": "travis-lint"
  },
  "version": "0.6.0"
}
